<h1 class="text-center mb-4">Listagem</h1>
<div class="d-flex justify-content-end mb-3">
    <a href="/cadastro" class="btn btn-success">Novo Cadastro</a>
</div>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {{#each registros}}
        <tr>
            <td>{{this.nome}}</td>
            <td>{{this.endereco}}</td>
            <td>
                <a href="/editar/{{this.id}}" class="btn btn-warning btn-sm">Editar</a>
                <a href="/excluir/{{this.id}}" class="btn btn-danger btn-sm">Excluir</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
